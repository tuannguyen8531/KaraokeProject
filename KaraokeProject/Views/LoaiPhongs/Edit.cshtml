@model KaraokeProject.Models.LoaiPhong

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title mt-5">Sửa thông tin loại phòng</h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Edit", "LoaiPhongs", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <div class="row formtype">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaLoaiPhong)
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiPhong, "Mã Loại phòng")
                            <input type="text" readonly class="form-control" value="@ViewBag.ID" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenLoaiPhong, "Tên Loại phòng")
                            @Html.EditorFor(model => model.TenLoaiPhong, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenLoaiPhong, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.GiaPhong, "Giá phòng")
                            @Html.EditorFor(model => model.GiaPhong, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GiaPhong, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="w3-center">
            <input type="submit" value="Sửa" class="btn btn-primary w3-margin-right" />
            <input type="button" value="Hủy" class="btn btn-danger" onclick="window.location.href = '@Url.Action("Index", "LoaiPhongs")'" />
        </div>
    }
</div>
