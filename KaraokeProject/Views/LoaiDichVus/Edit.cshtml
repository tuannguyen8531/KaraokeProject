@model KaraokeProject.Models.LoaiDichVu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title mt-5">Sửa Loại dịch vụ</h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Edit", "LoaiDichVus", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <div class="row formtype">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaLoaiDV)
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiDV, "Mã Loại dịch vụ")
                            <input type="text" readonly class="form-control" value="@ViewBag.MaDV" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenLoaiDV, "Tên loại dịch vụ")
                            @Html.EditorFor(model => model.TenLoaiDV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenLoaiDV, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="w3-center">
            <input type="submit" value="Sửa" class="btn btn-primary w3-margin-right" />
            <input type="button" value="Hủy" class="btn btn-danger" onclick="window.location.href = '@Url.Action("Index", "LoaiDichVus")'" />
        </div>
    }
</div>

