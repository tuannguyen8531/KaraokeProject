@model KaraokeProject.Models.DichVu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title mt-5">Xóa Dịch vụ</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row formtype">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaDichVu)
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaDichVu, "Mã Dịch vụ")
                        <input type="text" readonly class="form-control" value="@ViewBag.MaDV" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TenDichVu, "Tên Dịch vụ")
                        <input type="text" readonly class="form-control" value="@ViewBag.TenDV" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.LoaiDichVu, "Loại Dịch vụ")
                        <input type="text" readonly class="form-control" value="@ViewBag.LoaiDV" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DonViTinh, "Đơn vị")
                        <input type="text" readonly class="form-control" value="@ViewBag.DonVi" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NhaCungCap, "Nhà cung cấp")
                        <input type="text" readonly class="form-control" value="@ViewBag.NhaCungCap" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DonGia, "Đơn giá")
                        <input type="text" readonly class="form-control" value="@ViewBag.DonGia" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SoLuongTon, "Số lượng nhập")
                        <input type="text" readonly class="form-control" value="@ViewBag.SoLuongTon" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="w3-center">
            <input type="submit" value="Xóa" class="btn btn-danger w3-margin-right" />
            <input type="button" value="Hủy" class="btn btn-secondary" onclick="window.location.href = '@Url.Action("Index", "DichVus")'" />
        </div>
    }
</div>

