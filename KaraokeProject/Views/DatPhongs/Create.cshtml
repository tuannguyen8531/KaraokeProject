@model KaraokeProject.Models.DatPhong

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title mt-5">Thêm Đơn đặt phòng</h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Create", "DatPhongs", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <div class="row formtype">
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaDatPhong, "Mã đặt phòng")
                            <input type="text" readonly disabled class="form-control" value="@ViewBag.ID" />
                            @Html.ValidationMessageFor(model => model.MaDatPhong, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.GioVao, "Giờ vào")
                            <input type="time" readonly disabled class="form-control" value="@ViewBag.CurrentTime" />
                            @Html.ValidationMessageFor(model => model.GioVao, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayDat, "Ngày đặt")
                            <input type="datetime" readonly disabled class="form-control" value="@ViewBag.CurrentDay" />
                            @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaKhachHang, "Khách hàng")
                            @Html.DropDownList("MaKhachHang", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaKhachHang, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaPhongHat, "Phòng hát")
                            @Html.DropDownList("MaPhongHat", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaPhongHat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="w3-center">
            <input type="submit" value="Thêm" class="btn btn-primary w3-margin-right" />
            <input type="button" value="Hủy" class="btn btn-danger" onclick="window.location.href = '@Url.Action("Index", "DatPhongs")'" />
        </div>
    }
</div>
