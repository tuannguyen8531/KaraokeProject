@model KaraokeProject.Models.HoaDon

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var maDatPhong = ViewBag.MaDatPhong as string;
}


<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title mt-5">Lập hóa đơn</h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Create", "HoaDons", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <div class="row formtype">
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaHoaDon, "Mã Hóa đơn")
                            <input type="text" readonly disabled class="form-control" value="@ViewBag.ID" />
                            @Html.ValidationMessageFor(model => model.MaHoaDon, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayLapHD, "Ngày lập")
                            @*@Html.EditorFor(model => model.NgayLapHD, new { htmlAttributes = new { @class = "form-control" } })*@
                            <input type="datetime" readonly disabled class="form-control" value="@ViewBag.CurrentDay" />
                            @Html.ValidationMessageFor(model => model.NgayLapHD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NhanVien, "Nhân viên")
                            @Html.DropDownList("MaNhanVien", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NhanVien, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaDatPhong, "Phòng")
                            @*@Html.EditorFor(model => model.MaDatPhong, new { htmlAttributes = new { @class = "form-control" } })*@
                            <input type="text" readonly class="form-control" value="@maDatPhong" />
                            @*@Html.DropDownList("MaDatPhong", null, htmlAttributes: new { @class = "form-control" })*@
                            @Html.ValidationMessageFor(model => model.MaDatPhong, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.GioRa, "Giờ ra")
                            @*@Html.EditorFor(model => model.GioRa, new { htmlAttributes = new { @class = "form-control" } })*@
                            <input type="time" readonly disabled class="form-control" value="@ViewBag.CurrentTime" />
                            @Html.ValidationMessageFor(model => model.GioRa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TongTien, "Tiền dịch vụ")
                            @*@Html.EditorFor(model => model.GioRa, new { htmlAttributes = new { @class = "form-control" } })*@
                            <input type="number" readonly disabled class="form-control" value="@ViewBag.Total" />
                            @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="w3-center">
            <input type="submit" value="Thêm" class="btn btn-primary w3-margin-right" />
            <input type="button" value="Hủy" class="btn btn-danger" onclick="window.location.href = '@Url.Action("Index", "KhachHangs")'" />
        </div>
    }
</div>
