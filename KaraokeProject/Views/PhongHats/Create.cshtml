@model KaraokeProject.Models.PhongHat

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title mt-5">Thêm phòng mới</h3>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Create", "PhongHats", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <div class="row formtype">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaPhongHat, "Mã Phòng hát")
                            <input type="text" readonly disabled class="form-control" value="@ViewBag.ID" />
                            @Html.ValidationMessageFor(model => model.MaPhongHat, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenPhongHat, "Tên Phòng hát")
                            @Html.EditorFor(model => model.TenPhongHat, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenPhongHat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.LoaiPhong, "Loại phòng")
                            @Html.DropDownList("LoaiPhong", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LoaiPhong, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TrangThai, "Trạng thái")
                            @Html.DropDownList("TrangThai", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="w3-center">
            <input type="submit" value="Thêm" class="btn btn-primary w3-margin-right" />
            <input type="button" value="Hủy" class="btn btn-danger" onclick="window.location.href = '@Url.Action("Index", "PhongHats")'" />
        </div>
    }
</div>
